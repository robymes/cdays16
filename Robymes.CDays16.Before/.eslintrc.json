{
    "rules": {
        "indent": "error",
        "quotes": [
            "error",
            "double",
            "avoid-escape"
        ],
        "linebreak-style": [
            "error",
            "windows"
        ],
        "semi": [
            "error",
            "always"
        ],
        "vars-on-top": "error",
        "one-var": [
            "error",
            "always"
        ],
        "no-unused-vars": [
            "error", {
                "vars": "all",
                "args": "none"
            }
        ],
        "no-plusplus": "error",
        "no-console": "off",
        "curly": "error",
        "guard-for-in": "error",
        "no-else-return": "error",
        "no-eval": "error",
        "radix": "error",
        "no-new": "error",
        "no-use-before-define": "error",
        "new-parens": "error",
        "no-multiple-empty-lines": [
            "error", {
                "max": 1
            }
        ],
        "no-spaced-func": "error",
        "space-before-function-paren": [
            "error",
            "never"
        ],
        "no-trailing-spaces": "error",
        "no-unneeded-ternary": "error"
    },
    "env": {
        "browser": true,
        "jquery": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "jQuery": true,
        "Bacon": true,
        "Enumerable": true,
        "Bloodhound": true,
        "maquette": true,
        "moment": true,
        "_": true,
        "require": true,
        "define": true,
        //"vdom": true,
        "jasmine": true,
        "describe": true,
        "beforeEach": true,
        "it": true,
        "expect": true,
        "rm": true
    }
}